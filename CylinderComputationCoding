package quiz;
import java.util.Scanner;

public class CylinderComputation {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		double bArea, radius, sufArea, heig, vol;
		System.out.println("Enter the length of the radius in cm");
		System.out.println("Enter the height of the cylinder in cm");
		radius=sc.nextDouble();
		heig=sc.nextDouble();
		bArea = Math.PI * radius * radius;
		sufArea = 2.0 * Math.PI * radius + 2.0 * bArea;
		vol = bArea *heig;
		System.out.println("Base Area is "+(String.format("%.2f", bArea)+"cm"));
		System.out.println("Surface Area is "+(String.format("%.2f", sufArea)+"cm"));
		System.out.println("Volume is "+(String.format("%.2f", vol)+"cm"));
		



		
	}
}
