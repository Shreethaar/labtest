package quiz;
import java.util.Scanner;

public class CircleComputation {
	public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	double diameter, radius, area, circumference;
	System.out.println("Enter the length of the radius in cm");
	radius=sc.nextDouble();
	diameter=2.0*radius;
	area=Math.PI*radius*radius;
	circumference=2.0*Math.PI*radius;
	System.out.println("Diameter is "+(String.format("%.2f", diameter)+"cm"));
	System.out.println("Area is "+(String.format("%.2f", area)+"cm"));
	System.out.println("Circumference is "+(String.format("%.2f", circumference)+"cm"));
	

	}
}
